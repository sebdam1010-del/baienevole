// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  VOLUNTEER
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  firstName String
  lastName  String
  role      Role     @default(VOLUNTEER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Event {
  id                           String   @id @default(uuid())
  date                         DateTime
  nom                          String
  description                  String?
  horaireArrivee              String   // Format: "HH:MM"
  horaireDepart               String   // Format: "HH:MM"
  nombreSpectatursAttendus    Int      @default(0)
  nombreBenevolesRequis       Int
  saison                       Int
  commentaires                 String?
  createdAt                    DateTime @default(now())
  updatedAt                    DateTime @updatedAt
}
